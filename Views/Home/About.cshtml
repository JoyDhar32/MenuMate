@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-light p-5 rounded">
        <h1 class="display-4">About Us</h1>
        <p class="lead">Welcome to <strong>MenuMate</strong> - your one-stop solution for efficient restaurant menu management.</p>
    </div>

    <!-- About Content -->
    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <i class="fas fa-utensils fa-3x text-primary mb-3"></i>
            <h4 class="mb-3">Who We Are</h4>
            <p>MenuMate is dedicated to helping restaurants streamline their operations by making menu management simple, efficient, and effective.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fas fa-concierge-bell fa-3x text-success mb-3"></i>
            <h4 class="mb-3">Our Mission</h4>
            <p>Our mission is to optimize the process of managing ingredients, menu items, categories, and orders to ensure smooth restaurant operations.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fas fa-heart fa-3x text-danger mb-3"></i>
            <h4 class="mb-3">Why Choose Us</h4>
            <p>We provide a user-friendly, all-in-one solution that empowers restaurant owners to manage their menus with ease and precision.</p>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5">
        <a href="/" class="btn btn-primary btn-lg">Learn More About Our Services</a>
    </div>
</div>

